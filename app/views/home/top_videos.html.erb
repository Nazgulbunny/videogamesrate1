<% content_for(:page_subtitle) do %>
  Top Videos
<% end %>

<section id="top-videos">
  <div class="container">
    <div class="row text-center">
      <% if @videos.present? %>
        <% @videos.each do |video| %>
          <div class="col-md-4 col-sm-4 hero-feature">
              <div class="thumbnail">
                  <%= cl_video_tag(video.attachment.url, width: 800, height: 400, style: "display:block; max-width: 100%; height: 100%;") %>
                  <div class="caption">
                    <em>By: <%= video.user.username %></em>
                    <p>
                        <%= link_to "See More", video_path(video) %>
                    </p>
                  </div>
              </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>