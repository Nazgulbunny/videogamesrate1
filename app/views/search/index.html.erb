<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    <div class="search-form">
                        <%= form_tag(search_path, :method => "get", id: "search-form") do %>
                          <div class="input-group">
                            <%= text_field_tag :search, params[:search], class: "form-control input-lg" %>
                            <div class="input-group-btn">
                              <%= submit_tag "Search", class: "btn btn-lg btn-primary"%>
                            </div>
                          </div>
                        <% end %>
                    </div>

                    <% if @events.present? %>
                      <h2>
                          Results found for events
                      </h2>
                      <% @events.each do |event| %>
                        <div class="hr-line-dashed"></div>
                        <div class="search-result">
                            <h4>
                              Name: <%= event.name %>
                            </h4>
                            <h4>
                              Date: <%= fa_icon'calendar' %> <%= formatted_time(event.when) %>
                            </h4>
                            <%= link_to 'See Event', event_path(event), class: "search-link" %>
                        </div>
                      <% end %>

                      <br>
                    <% end %>

                    <% if @users.present? %>
                      <br>

                      <h2>
                        Results found for users
                      </h2>
                      <% @users.each do |user| %>
                        <div class="hr-line-dashed"></div>
                        <div class="search-result">
                          <%= image_tag user.avatar_url(:standard) || 'avatar.jpg', class: 'avatar' %>
                          <h4>Username: <%= user.username %></h4>
                          <%= link_to 'See Profile', user_path(user), class: "search-link" %>
                        </div>
                      <% end %>

                      <br>
                    <% end %>

                    <% if @games.present? %>
                      <br>

                      <h2>
                        Results found for games
                      </h2>
                      <% @games.each do |game| %>
                        <div class="hr-line-dashed"></div>
                        <div class="search-result">
                          <%= image_tag game.logo_url(:standard) || 'avatar.jpg', class: 'avatar' %>
                          <h4>Title: <%= game.title %></h4>
                          <%= link_to 'See Game', game_path(game), class: "search-link" %>
                        </div>
                      <% end %>

                      <br>
                    <% end %>

                    <% if @videos.present? %>
                      <br>

                      <h2>
                        Results found for videos
                      </h2>
                      <% @videos.each do |video| %>
                        <div class="hr-line-dashed"></div>
                        <div class="search-result">
                          <%= cl_video_tag(video.attachment.url, width: 400, height: 800) %>
                          <h4>Description: <%= video.description %></h4>
                          <%= link_to 'See video', video_path(video), class: "search-link" %>
                        </div>
                      <% end %>

                      <br>
                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>
